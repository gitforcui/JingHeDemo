<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <Button
        android:id="@+id/btn_sliding_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:text="侧滑菜单" />

    <Button
        android:id="@+id/btn_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_sliding_menu"
        android:layout_centerHorizontal="true"
        android:text="单个计时器" />

    <Button
        android:id="@+id/btn_timers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_timer"
        android:layout_alignStart="@+id/btn_timer"
        android:layout_below="@+id/btn_timer"
        android:text="多个计时器" />

    <Button
        android:id="@+id/btn_timer_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_timer"
        android:layout_alignStart="@+id/btn_timer"
        android:layout_below="@+id/btn_timer"
        android:layout_marginTop="46dp"
        android:text="计时器列表" />

</RelativeLayout>
